# Production Environment Variables
HEADAI_ENV=production

# Database
DB_HOST=db.headai.com
DB_PORT=5432
DB_USER=${PROD_DB_USER}
DB_PASSWORD=${PROD_DB_PASSWORD}

# Redis Cluster
REDIS_NODES=${PROD_REDIS_NODES}
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}

# API
API_SECRET_KEY=${PROD_API_SECRET}
JWT_SECRET=${PROD_JWT_SECRET}

# AI Models
OPENAI_API_KEY=${PROD_OPENAI_API_KEY}

# Storage
AWS_ACCESS_KEY_ID=${PROD_AWS_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${PROD_AWS_SECRET_KEY}
AWS_DEFAULT_REGION=us-east-1

# Monitoring
SENTRY_DSN=${PROD_SENTRY_DSN}
ANALYTICS_ID=${PROD_ANALYTICS_ID}

# Email
SMTP_HOST=smtp.headai.com
SMTP_PORT=587
SMTP_USER=${PROD_SMTP_USER}
SMTP_PASSWORD=${PROD_SMTP_PASSWORD}

# Slack
SLACK_WEBHOOK_URL=${PROD_SLACK_WEBHOOK}

# SSL
SSL_CERT_PATH=/etc/ssl/headai/cert.pem
SSL_KEY_PATH=/etc/ssl/headai/key.pem

# Feature Flags
ENABLE_EXPERIMENTAL=false
ENABLE_BETA_FEATURES=false

# Performance
MIN_INSTANCES=3
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=70
